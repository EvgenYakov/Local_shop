<h1>Корзина</h1>

<div id="card">
{{#if card.courses.length}}

    <table class="table">
        <thead>
        <tr>
            <th>Название</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {{#each card.courses}}
            <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btn-danger js-remove" data-id="{{id}}">удалить</button>
            </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <p><strong>Цена:</strong> <span class="price">{{card.price}}</span></p>
{{else}}
{{/if}}
</div>